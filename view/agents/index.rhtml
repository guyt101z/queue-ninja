<div style="font: normal 14px auto "Trebuchet MS", Verdana, Arial, Helvetica, sans-serif;"> Agents</div>
<br />
<table align="center" width="100%">
  <tr>
    <th>Channel</th>
    <th>First</th>
    <th>Last</th>
    <th>Exten</th>
    <th>Group</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% for agent in @agents %>
  <tr>
    <td><%=h agent.channel %></td>
    <td><%=h agent.first %></td>
    <td><%=h agent.last %></td>
    <td><%=h agent.exten %></td>
    <td><%=h agent.group.name if agent.group %></td>
    <td><a href="<%= R(AgentsController, :show, agent.id) %>">Show</a></td>
    <td><a href="<%= R(AgentsController, :edit, agent.id) %>">Edit</a></td>
    <td><a href="<%= R(AgentsController, :delete, agent.id) %>">Delete</a></td>
  </tr>
<% end %>
</table>

<br />
