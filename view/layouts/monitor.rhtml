<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
	<title><%=h @title %></title>
	<script type="text/javascript" src="/js/jquery.js"></script>
	<link href="/css/queueninja/monitor.css" rel="stylesheet" type="text/css">
	<script type="text/javascript">
	    function reload1(){
			$('#live_view').load("<%= R(LiveViewController, :index)  %>");
			setTimeout("reload1()",1000)
		}
		$(document).ready(function(){
			setTimeout("reload1()",1000)
			});
	</script>
  </head>
  <body>
    <div id='container'>
      <div id='header'>
        <div id='logo'>
		      <%= render_template('monitor/header') %>
        </div>
        <div id='menu'>
		      <%= render_template('monitor/menu') %>
        </div>
      </div>
      <div id='main'>
        <div id='content'>
          <div id='head_image'>
            <div id='slogan'>
              <strong>
                Queue Ninja
              </strong>
              <br />
              Asterisk Queue Monitoring and Analysis
            </div>
          </div>
          <div id='text'>
			      <%= @content  %>
          </div>
        </div>
        <div id='footer'>
          <div id='left_footer'>
            <%= render_template('left_footer') %>
          </div>
          <div id='right_footer'>
            <%= render_template('right_footer') %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
